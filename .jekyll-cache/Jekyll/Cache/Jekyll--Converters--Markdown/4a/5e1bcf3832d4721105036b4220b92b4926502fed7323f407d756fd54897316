     <span class="n">style</span><span class="o">=</span><span class="s">"display:inline-block;width:300px;height:250px"</span>
     <span class="n">data</span><span class="o">-</span><span class="n">ad</span><span class="o">-</span><span class="n">client</span><span class="o">=</span><span class="s">"ca-pub-5150894678574694"</span>
