    <span class="k">elif</span> <span class="n">color</span> <span class="o">==</span> <span class="s">"blue"</span> <span class="ow">or</span> <span class="n">color</span> <span class="o">==</span> <span class="s">"red"</span><span class="p">:</span>
        <span class="n">number</span> <span class="o">=</span> <span class="nb">int</span><span class="p">(</span><span class="nb">input</span><span class="p">(</span><span class="s">"Select a number [3, 4, 7, 8]"</span><span class="p">))</span>
