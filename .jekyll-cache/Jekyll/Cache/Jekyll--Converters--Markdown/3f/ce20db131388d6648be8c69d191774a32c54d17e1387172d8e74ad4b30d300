              <span class="k">print</span><span class="p">(</span><span class="s">"You will live a happy life for 100 years at least!"</span><span class="p">)</span>
        <span class="k">elif</span> <span class="n">number</span> <span class="o">==</span> <span class="mi">4</span><span class="p">:</span>
              <span class="k">print</span><span class="p">(</span><span class="s">"You will become a successful doctor one day!"</span><span class="p">)</span>
        <span class="k">elif</span> <span class="n">number</span> <span class="o">==</span> <span class="mi">7</span><span class="p">:</span>
              <span class="k">print</span><span class="p">(</span><span class="s">"All your dreams will come true, just be patient!"</span><span class="p">)</span>
